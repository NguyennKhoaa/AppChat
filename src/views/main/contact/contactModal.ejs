<div class="modal fade" id="contactsModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Quản lý liên lạc</h4>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#find-user">Tìm người dùng</a></li>
                    <li><a data-toggle="tab" id="link-contacts" href="#contacts">
                            Danh bạ
                            <% if(countContast>0){%>
                            <span class="show-number-contacts count-contacts"><em><%=countContast%></em></span>
                            <%}else{%>
                            <span class="show-number-contacts count-contactsx "><em><%=countContast%></em></span>
                            <%} %>

                        </a></li>
                    <li><a data-toggle="tab" id="link-request-contact-sent" href="#request-contact-sent">
                            Đang chờ xác nhận
                            <% if(countContastSent>0){%>
                            <span
                                class="show-number-contacts count-request-contact-sent"><em><%=countContastSent%></em></span>
                            <%}else{%>
                            <span class="show-number-contacts count-contacts "></em></span>
                            <%} %>

                        </a></li>
                    <li><a data-toggle="tab" id="link-request-contact-received" href="#request-contact-received">
                            Yêu cầu kết bạn
                            <% if(countContastRecived>0){%>
                            <span
                                class="show-number-contacts count-request-contact-received"><em><%=countContastRecived%></em></span>
                            <%}else{%>
                            <span class="show-number-contacts count-contacts "><em> </em></span>
                            <%} %>

                        </a></li>
                </ul>
                <div class="tab-content">
                    <div id="find-user" class="tab-pane fade in active">
                        <div class="find-user-top">
                            <div class="input-group col-md-12">
                                <input type="text" id="txtFindUsers" class="form-control"
                                    placeholder="Nhập E-mail hoặc username..." />
                                <span class="input-group-btn">
                                    <button class="btn btn-lg" id="btnFindUsers" type="button">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="find-user-bottom">
                            <ul class="contactList">

                            </ul>
                        </div>
                    </div>
                    <div id="contacts" class="tab-pane fade">
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                <%  contast.forEach(function(user){%>
                                <li class="_contactList" data-uid="<%=user._id%>">
                                    <div class="contactPanel">
                                        <div class="user-avatar">
                                            <img src="/images/users/<%=user.avatar%>" alt="">
                                        </div>
                                        <div class="user-name">
                                            <p>
                                                <%=user.userName%>
                                            </p>
                                        </div>
                                        <br>
                                        <div class="user-address">
                                            <span>&nbsp <%=user.address%></span>
                                        </div>
                                        <div class="user-talk" data-uid="<%=user._id%>">
                                            Trò chuyện
                                        </div>
                                        <div class="user-remove-contact action-danger" data-uid="<%=user._id %>">
                                            Xóa liên hệ
                                        </div>
                                    </div>
                                </li>
                                <%}) %>

                            </ul>
                        </div>
                    </div>
                    <div id="request-contact-sent" class="tab-pane fade">
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                <%  contastSent.forEach(function(user){%>
                                <li class="_contactList" data-uid="<%=user._id%>">
                                    <div class="contactPanel">
                                        <div class="user-avatar">
                                            <img src="/images/users/<%=user.avatar%>" alt="">
                                        </div>
                                        <div class="user-name">
                                            <p>
                                                <%=user.userName%>
                                            </p>
                                        </div>
                                        <br>
                                        <div class="user-address">
                                            <span>&nbsp <%=user.address%></span>
                                        </div>
                                        <div class="user-remove-request-contact display-important action-danger"
                                            data-uid="<%=user._id%>">
                                            Hủy yêu cầu
                                        </div>
                                    </div>
                                </li>
                                <%}) %>

                            </ul>
                        </div>
                    </div>
                    <div id="request-contact-received" class="tab-pane fade">
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                <%  contastRecived.forEach(function(user){%>
                                <li class="_contactList" data-uid="<%=user._id%>">
                                    <div class="contactPanel">
                                        <div class="user-avatar">
                                            <img src="/images/users/<%=user.avatar %>" alt="">
                                        </div>
                                        <div class="user-name">
                                            <p>
                                                <%=user.userName%>
                                            </p>
                                        </div>
                                        <br>
                                        <div class="user-address">
                                            <span>&nbsp <%=user.address%></span>
                                        </div>
                                        <div class="user-approve-request-contact-received" data-uid="<%=user._id%>">
                                            Chấp nhận
                                        </div>
                                        <div class="user-remove-request-contact-received action-danger"
                                            data-uid="<%=user._id%>">
                                            Xóa yêu cầu
                                        </div>
                                    </div>
                                </li>
                                <%}) %>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>